@page "/login"
@inject Finance.Mobile.Services.FinanceApiClient Api
@inject Finance.Mobile.Services.TokenService TokenService
@inject NavigationManager Navigation

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-6">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h5">Login</MudText>
        <MudTextField @bind-Value="_username" Label="Usuário" Class="mb-3" />
        <MudTextField @bind-Value="_password" Label="Senha" InputType="InputType.Password" Class="mb-3" />
        <div style="display:flex;justify-content:center;margin-top:12px;">
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="DoLogin" Class="px-6">Entrar</MudButton>
        </div>
    </MudPaper>
</MudContainer>

@code {
    private string _username = string.Empty;
    private string _password = string.Empty;

    private async Task DoLogin()
    {
        var token = await Api.LoginAsync(_username, _password);
        if (!string.IsNullOrEmpty(token))
        {
            await TokenService.SaveTokenAsync(token);
            // FinanceApiClient will pick token via AuthMessageHandler on next requests
            Navigation.NavigateTo("/");
        }
    }
}
